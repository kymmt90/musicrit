<h1>ジャンル<%= @genre.name %>を更新</h1>

<%= render partial: 'layouts/errors', locals: { resource: @genre } %>

<%= form_with model: @genre, method: :patch, local: true do |form| %>
  <%= form.label :name, 'ジャンル名' %>
  <%= form.text_field :name %>
  <%= form.label :description, '説明' %>
  <%= form.text_area :description %>
  <%= form.submit value: '更新する' %>
<% end %>

<%= form_with model: @genre, method: :delete, local: true do |form| %>
  <%= form.submit value: '削除する', data: { confirm: "#{@genre.name}を削除します。よろしいですか？" } %>
<% end %>
