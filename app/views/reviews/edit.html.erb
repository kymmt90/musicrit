<h1><%= @musician.name %>のレビューを書き直す</h1>

<%= render partial: 'layouts/errors', locals: { resource: @review } %>

<%= form_with model: [@musician, @review], local: true do |form| %>
  <%= form.label :body, 'レビュー' %><br />
  <%= form.text_area :body %><br />

  <%= form.submit value: '更新する' %>
<% end %>

<%= form_with model: [@musician, @review], local: true, method: :delete do |form| %>
  <%= form.submit value: '削除する' %>
<% end %>
